            <li class='nav-item text-secondary rounded'><a
                href='/cart'
                class='nav-link'
              >購物車</a></li>
            {{#if isAuthenticated}}
              <li class='nav-item text-secondary rounded'><a
                  href='/users/{{user._id}}'
                  class='nav-link'
                >個人資料</a></li>
              <li class='nav-item text-secondary rounded'><a
                  href='/users/logout'
                  class='nav-link'
                >logout</a></li>
            {{else}}
              <li class='nav-item text-secondary rounded'><a
                  href='/users/login'
                  class='nav-link'
                >login</a></li>
            {{/if}}
          </ul>
        </div>
      </nav>
    </div>
