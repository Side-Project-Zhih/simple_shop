<h1 class='restaurant-show-title'>個人資料</h1>
<div class='container'>
  <div class='row justify-content-between no-gutters'>
    <div class='col-2 list-group'>
      <h3 class='list-group-item list-group-item-action'>
        個人資料
      </h3>
      <a
        href='/users/{{user._id}}'
        class='list-group-item list-group-item-action list-group-item-light'
      >基本資料</a>
      <a
        href='/users/{{user._id}}?editPwd=true'
        class='list-group-item list-group-item-action list-group-item-light'
      >修改密碼</a>
      <a
        href='/users/{{user._id}}?credit=true'
        class='list-group-item list-group-item-action list-group-item-light'
      >信用卡資訊</a>
      <a
        href='/users/{{user._id}}?orders=true'
        class='list-group-item list-group-item-action list-group-item-light'
      >訂單紀錄</a>
    </div>
    {{#if isProfile}}
      <div class='col-9'>
        <form action="/users/{{user._id}}?_method=PUT" method="POST">
          <div class='form-group row'>
            <label
              for='staticEmail'
              class='col-sm-2 col-form-label'
            >Email</label>
            <div class='col-sm-10'>
              <input
                type='text'
                readonly
                class='form-control-plaintext'
                id='staticEmail'
                value='{{user.email}}'
              />
            </div>
          </div>
          <div class='form-group row'>
            <label for='inputName' class='col-sm-2 col-form-label'>姓名</label>
            <div class='col-sm-10'>
              <input
                type='text'
                class='form-control'
                id='inputName'
                name="name"
                value='{{user.name}}'
              />
            </div>
          </div>
          <div class='form-group row'>
            <label for='inputPhone' class='col-sm-2 col-form-label'>手機</label>
            <div class='col-sm-10'>
              <input
                type='text'
                class='form-control'
                id='inputPhone'
                name="phone"
                value='{{user.phone}}'
              />
            </div>
          </div>
          <div class='form-group row'>
            <label
              for='inputMailNum'
              class='col-sm-2 col-form-label'
            >郵遞區號</label>
            <div class='col-sm-10'>
              <input
                type='text'
                class='form-control'
                id='inputMailNum',
                name="mailNum"
                value='{{user.mailNum}}'
              />
            </div>
          </div>
          <div class='form-group row mb-5'>
            <label
              for='inputAddress'
              class='col-sm-2 col-form-label'
            >地址</label>
            <div class='col-sm-10'>
              <input
                type='text'
                class='form-control'
                id='inputAddress',
                name="address"
                value='{{user.address}}'
              />
            </div>
          </div>
          <div class='row d-flex justify-content-end mr-1'>
            <button class='col-3 btn btn-secondary'>儲存</button>
          </div>
        </form>
      </div>
    {{/if}}
    {{#if isEditPwd}}
      <div class='col-9 mt-5'>
        <form action="/users/{{user._id}}?_method=PUT" method="POST">
          <div class='form-group row'>
            <label
              for='oldPassword'
              class='col-sm-2 col-form-label'
            >舊密碼</label>
            <div class='col-sm-10'>
              <input
                type='password'
                class='form-control'
                id='oldPassword'
                {{#if user.isGoogle }}
                readonly
                {{/if}}
                {{#if user.isFb }}
                readonly
                {{/if}}
                name='password'
                placeholder='請輸入舊密碼'
              />
            </div>
          </div>
          <div class='form-group row'>
            <label
              for='newPassword'
              class='col-sm-2 col-form-label'
            >新密碼</label>
            <div class='col-sm-10'>
              <input
                type='password'
                name='newPassword'
                {{#if user.isGoogle }}
                readonly
                {{/if}}
                {{#if user.isFb }}
                readonly
                {{/if}}
                class='form-control'
                id='newPassword'
                placeholder='請輸入新密碼'
              />
            </div>
          </div>
          <div class='form-group row'>
            <label
              for='checkPassword'
              class='col-sm-2 col-form-label'
            >確認密碼</label>
            <div class='col-sm-10'>
              <input
                type='password'
                class='form-control'
                {{#if user.isGoogle }}
                readonly
                {{/if}}
                {{#if user.isFb }}
                readonly
                {{/if}}
                id='checkPassword'
                name='checkPassword'
                placeholder='請輸入確認密碼'
              />
            </div>
          </div>

          <div class='row d-flex justify-content-end mr-1'>
            <button class='col-3 btn btn-secondary'>確認修改</button>
          </div>
        </form>
      </div>
    {{/if}}
    {{#if isCredit}}
      <div class='col-9 mt-5'>
        <form action="/users/{{user._id}}?_method=PUT" method="POST">
          <div class='form-group row mb-5'>
            <label for='cardNumber' class='col-sm-2 col-form-label'>卡號</label>
            <div class='col-sm-10'>
              <input
                type='text'
                class='form-control'
                id='cardNumber'
                name='cardNumber'
                value='{{user.creditCard.carNumber}}'
              />
            </div>
          </div>
          <div class='form-group row mb-5'>
            <label for='expMon' class='col-sm-2 col-form-label'>到期月份</label>
            <div class='col-sm-3'>
              <input
                type='text'
                class='form-control'
                id='expMon'
                name='expMon'
                value='{{user.creditCard.expMon}}'
              />
            </div>
            <label for='expYear' class='col-sm- col-form-label'>到期年份</label>
            <div class='col-sm-3'>
              <input
                type='text'
                class='form-control'
                id='expYear'
                name='expYear'
                value='{{user.creditCard.expYear}}'
              />
            </div>
          </div>
          <div class='row d-flex justify-content-end mr-1'>
            <button class='col-3 btn btn-secondary'>儲存</button>
          </div>
        </form>
      </div>
    {{/if}}
    {{#if orders}}
      <div class='col-8'>

      </div>
    {{/if}}
  </div>
</div>