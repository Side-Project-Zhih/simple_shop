<h1 class='restaurant-show-title'>My Shop</h1>
<div class='container'>
  <div class='media row mb-5 border'>
    <img
      src='{{product.pic}}'
      class='col-4 align-self-start border rounded mr-3 m-3'
      alt='...'
    />
    <div class='col-8 media-body'>
      <h3 class='mb-5 pt-2'>{{product.name}}</h3>
      <h3 class='text-info mb-5'>$ {{product.price}}</h3>
      <div class="row">
        <form action="/carts/{{product._id}}" class='col-4 form-inline no-gutters' method="POST">
        <label class='my-1 mr-2 mb-5' for='inlineFormCustomSelectPref'>數量</label>
        <select
          class='custom-select my-1 mr-sm-2 mb-5'
          name="amount"
          id='inlineFormCustomSelectPref'
        >
          <option selected disabled>選擇數量...</option>
          {{#each product.amount}}
          <option value='{{this}}'>{{this}}</option>
          {{/each}}
        </select>
          <button type='submit' class='w-100 btn btn-warning my-1'>加入購物車</button>
      </form>
      <form class="col-4 d-flex flex-column justify-content-end" action="/wishlist/{{product._id}}" method="POST">
       <button type="submit" class="btn btn-danger mb-2 mr-5">加入願望清單</button>
      </form>
      </div>

    </div>

  </div>

</div>
  <div class='mb-5 border p-4 container'>
    <h3 class='mb-3'>商品介紹</h4>
    <p>{{product.description}}</p>
  </div>