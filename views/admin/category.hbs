<h1 class='restaurant-show-title'>管理種類</h1>
<div class="container">
  <div class="row">
    {{>message}}
    <table class='col mr-3 table border-bottom'>
      <thead class='thead-dark'>
        <tr>
          <th scope='col'>種類名稱</th>
          <th scope='col'>刪除</th>
          <th scope='col'>修改</th>
        </tr>
      </thead>
      <tbody>

        {{#each categories}}
        <tr>
          <th scope='row'>
            {{this.name}}
          </th>
          <td>
            <form action="/admin/categories/{{this._id}}?_method=Delete" method="POST">
              <button class="btn btn-danger">刪除</button>
            </form>
          </td>
          <td><a href="/admin/categories?id={{this._id}}" class="btn btn-secondary">修改</a></td>
          {{/each}}
      </tbody>
    </table>
    {{#if category}}
    <form action="/admin/categories/{{category._id}}?_method=PUT" method="POST" class="col border rounded">
      <h4 class="border-bottom  pt-3 pb-3 pr-3">修改</h4>
      <div class='form-group '>
        <label for='name' class='col-form-label mt-3'>種類名稱</label>
        <div class=' mt-3 mb-4'>
          <input type='text' class='form-control ' id='name' name='name' value='{{category.name}}' />
        </div>
        <div class='d-flex justify-content-end'>
          <a href="/admin/categories" class="col-3 btn btn-primary m-3">返回</a>
          <button type='submit' class='col-3 btn btn-secondary m-3'>確定修改</button>
        </div>
    </form>
    {{else}}
    <form action="/admin/categories" method="POST" class="col border rounded">
      <h4 class="border-bottom  pt-3 pb-3 pr-3">新增</h4>
      <div class='form-group '>
        <label for='name' class='col-form-label mt-3'>種類名稱</label>
        <div class=' mt-3 mb-4'>
          <input type='text' class='form-control ' id='name' , name='name' value='' />
        </div>
        <div class='d-flex justify-content-end'>
          <a href="/admin/categories" class="col-3 btn btn-primary m-3">返回</a>
          <button type='submit' class='col-3 btn btn-secondary m-3'>新增</button>
        </div>
    </form>
    {{/if}}
  </div>
</div>