<h1 class='restaurant-show-title'>My Shop</h1>
<!-- search bar -->
<div class='container'>
  <div class='row no-gutters'>

  <div class="col-12 row justify-content-between ">
    {{>message}}
  </div>

    </div>
    <div class='col-12 row justify-content-between'>
      <form action='/admin/products/search ' class='col-4 p-0'>
        <div class='input-group'>
          <input
            type='text'
            name='keyword'
            class='form-control'
            placeholder='輸入商品名稱'
            aria-label='Restaurant Name...'
            value= 
            {{#if keyword}}
            {{keyword}}
            {{else}}
            ''
            {{/if}}
            aria-describedby='search-button'
          />
          {{#if category}}
          <input type="text" hidden name="category" value="{{category}}">
          {{/if}}
          {{#if order}}
          <input type="text" hidden name="order" value="{{order}}">
          {{/if}}
          <div class='input-group-append'>
            <button class='btn btn-major' type='submit' id='search-button'><i
                class='fas fa-search'
              ></i></button>
          </div>
        </div>
      </form>
      <div class='col-4 dropdown d-flex justify-content-end p-0'>
        <button
          class='btn btn-danger dropdown-toggle'
          type='button'
          id='dropdownMenu2'
          data-toggle='dropdown'
          aria-haspopup='true'
          aria-expanded='false'
        >
        {{#if orderName_cht}}
          {{orderName_cht}}
        {{else}}
          商品排序
        {{/if}}
        </button>
        {{#if keyword}}
         {{#if category}}
            <div class='dropdown-menu' aria-labelledby='dropdownMenu2'>
              <a
                href='/admin/products/search?order=low-high&keyword={{keyword}}&category={{category}}'
                class='dropdown-item'
                type='button'
              >價錢低到高</a>
              <a
                href='/admin/products/search?order=high-low&keyword={{keyword}}&category={{category}}'
                class='dropdown-item'
                type='button'
              >價錢高到低</a>
              <a
                href='/admin/products/search?order=A-Z&keyword={{keyword}}&category={{category}}'
                class='dropdown-item'
                type='button'
              >A-Z</a>
              <a
                href='/admin/products/search?order=Z-A&keyword={{keyword}}&category={{category}}'
                class='dropdown-item'
                type='button'
              >Z-A</a>
            </div>
          {{else}}
              <div class='dropdown-menu' aria-labelledby='dropdownMenu2'>
                <a
                  href='/admin/products/search?order=low-high&keyword={{keyword}}'
                  class='dropdown-item'
                  type='button'
                >價錢低到高</a>
                <a
                  href='/admin/products/search?order=high-low&keyword={{keyword}}'
                  class='dropdown-item'
                  type='button'
                >價錢高到低</a>
                <a
                  href='/admin/products/search?order=A-Z&keyword={{keyword}}'
                  class='dropdown-item'
                  type='button'
                >A-Z</a>
                <a
                  href='/admin/products/search?order=Z-A&keyword={{keyword}}'
                  class='dropdown-item'
                  type='button'
                >Z-A</a>
              </div>
          {{/if}}
        {{else}}
          <div class='dropdown-menu' aria-labelledby='dropdownMenu2'>
          <a
            href='/admin/products?order=low-high&category={{this.category}}'
            class='dropdown-item'
            type='button'
          >價錢低到高</a>
          <a
            href='/admin/products?order=high-low&category={{this.category}}'
            class='dropdown-item'
            type='button'
          >價錢高到低</a>
          <a
            href='/admin/products?order=A-Z&category={{this.category}}'
            class='dropdown-item'
            type='button'
          >A-Z</a>
          <a
            href='/admin/products?order=Z-A&category={{this.category}}'
            class='dropdown-item'
            type='button'
          >Z-A</a>
        </div>
        {{/if}}
      </div>
    </div>

  </div>

</div>

<!-- product list -->
<div class='container mt-3'>
  <div class='row '>
    <div class='col-2 list-group'>
      <a class='list-group-item bg-light '>商品分類</a>
      <a href="/admin/products"
        class='list-group-item list-group-item-action list-group-item-light 
        {{#if category}}
        {{else}}
        active
        {{/if}}'
        aria-disabled='true'
      >全部</a>
      {{#each categories}}
      <a href="/admin/products?category={{this.url}}"
        class='list-group-item list-group-item-action list-group-item-light 
        {{#ifCond ../category this.name}}
        active {{../category}}
        {{/ifCond}}
        '
      >{{this.name}}</a>
      {{/each}}
    </div>
    <div class='row col-md-10 col-12 mx-auto justify-content-start'>
      {{#each products}}
      <div class='col-md-4 col-12 mb-3'>
        <div class='text-secondary w-100'>
          <a href='/admin/products/{{this._id}}' class='card rounded-0 text-decoration-none'>
            <img class='card-img-top' src='{{this.pic}}' alt='{{this.pic}}' style="height: 183px;" />
            <div class='card-body pb-0 text-secondary'>
              <h6 class='card-title mb-2'>{{this.name}}</h6>
              <div class="d-flex justify-content-between">
                <h6 class='bg-primary text-white p-1 rounded card-title mb-2'>單價{{this.price}} 元</h5>
                <h6 class='bg-info text-white p-1 rounded card-title mb-2'>庫存{{this.amount}} </h6>
              </div>
            </div>
          </a>
          <div class='w-100'>
              <a href='/admin/products/{{this._id}}/edit' class='w-100 btn btn-danger rounded-0'>修改商品</a>
          </div>
        </div>
      </div>
      {{/each}}
      <div class="col-12 row justify-content-center">
    <nav aria-label="Page navigation col-8 ">
     {{#if keyword}}
      <ul class="pagination mt-4">

        <li class="page-item"><a class="page-link" href="/admin/products/search?keyword={{keyword}}&category={{category}}&order={{order}}&page={{prev}}">Previous</a></li>
         {{#each pages}}
        <li class="page-item         
        {{#ifCond ../page this}}
        active
        {{/ifCond}}"><a class="page-link" href="/admin/products/search?keyword={{keyword}}&category={{../category}}&order={{../order}}&page={{this}}">{{this}}</a></li>
        {{/each}}
        <li class="page-item"><a class="page-link" href="/admin/products/search?category={{category}}&order={{order}}&page={{next}}">Next</a></li>
      </ul>
      {{else}}
      <ul class="pagination mt-4">

        <li class="page-item"><a class="page-link" href="/admin/products?category={{category}}&order={{order}}&page={{prev}}">Previous</a></li>
         {{#each pages}}
        <li class="page-item         
        {{#ifCond ../page this}}
        active
        {{/ifCond}}"><a class="page-link" href="/admin/products?category={{../category}}&order={{../order}}&page={{this}}">{{this}}</a></li>
        {{/each}}
        <li class="page-item"><a class="page-link" href="/admin/products?category={{category}}&order={{order}}&page={{next}}">Next</a></li>
      </ul>
      {{/if}}
    </nav>

      </div>
    </div>

  </div>
</div>